@model IEnumerable<TestApi.Models.Warehouse>

@{
    ViewBag.Title = "Index";
}

<h2>Список товаров на складе</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Item.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Count)
        </td>
        <td>
            @Html.ActionLink("Добавить в список", "AddToCart", new { id = item.ItemId }, "") 
        </td>
    </tr>
}

</table>
